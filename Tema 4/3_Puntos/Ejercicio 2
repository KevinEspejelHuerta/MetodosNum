package Tres_Puntos;
public class Ejercicio2 {
    public static void main(String[] args) {
        double x = Math.PI / 4;
        double h = 0.001;
        double derivada = (-f(x + 2*h) + 4*f(x + h) - 3*f(x)) / (2*h);
        System.out.println("Derivada de sin(x) en Ï€/4: " + String.format("%.6f", derivada));
    }

    public static double f(double x) {
        return Math.exp(x);
    }
}